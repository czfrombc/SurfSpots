@using SurfBreaks.Core;
@model SurfBreak;

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <div> Location: @Model.Location  </div>
        <div> Break: @Model.Break  </div>
    </div>
    <div class="panel-body">
        <a class="btn btn-primary" asp-page="./Detail" asp-route-surfBreakId="@Model.Id">
            More Details
            <i class="glyphicon glyphicon-search"> </i>
        </a>
        <a class="btn btn-primary" asp-page="./Edit" asp-route-surfBreakId="@Model.Id">
            Edit
            <i class="glyphicon glyphicon-edit"> </i>
        </a>
        <a class="btn btn-primary" asp-page="./Delete" asp-route-surfBreakId="@Model.Id">
            Delete
            <i class="glyphicon glyphicon-trash"> </i>
        </a>
    </div>
</div>
<br/>
